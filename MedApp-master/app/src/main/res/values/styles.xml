<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Reg_EditText">
        <item name="android:layout_width"> match_parent </item>
        <item name="android:layout_height"> match_parent </item>
        <item name="backgroundTint"> @color/RegColor </item>
        <item name="android:layout_marginVertical"> 10dp </item>
        <item name="android:textColorHint"> @color/RegColor </item>
        <item name="android:textColor"> @color/RegColor </item>
    </style>
    <style name="Button_Reg">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="fontFamily"> @font/alegreya_sans </item>
        <item name="android:textSize"> 20dp </item>
        <item name="textAllCaps"> false </item>
        <item name="android:textColor"> @color/white </item>
        <item name="android:background"> @drawable/ic_button_rectangle </item>
        <item name="android:layout_marginVertical"> 10dp </item>
    </style>
    <style name="MainText">
        <item name="android:fontFamily">@font/alegreya</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor"> @color/white </item>
    </style>
    <style name="MainText_Sans" parent="MainText">
        <item name="android:fontFamily">@font/alegreya_sans</item>
    </style>
    <style name="MainText_Black" parent="MainText">
        <item name="android:textColor"> @color/black </item>
    </style>
    <style name="MainText_BlackSans" parent="MainText">
        <item name="android:textColor"> @color/black </item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
    </style>
    <style name="MainButtonIcon">
        <item name="android:background">@drawable/ic_rect</item>
        <item name="android:layout_width" > 62dp</item>
        <item name="android:layout_height"> 65dp</item>
        <item name="android:layout_marginHorizontal"> 15dp</item>
    </style>
    <style name="DarkButton">
        <item name="android:background">@drawable/ic_dark_rect</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/alegreya_sans</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>